{
  "schemaVersion": 1,
  "id": "geckoarmor",
  "version": "${version}",

  "name": "GeckoArmor",
  "description": "Client-side mod that lets you assign GeckoLib armor models to Items with certain NBT",
  "authors": ["ASangarin"],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/geckoarmor/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "eu.asangarin.garmor.GeckoArmor"
    ]
  },
  "mixins": [
    "garmor.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.18",
    "java": ">=17",
    "geckolib3": ">=3.0.64"
  }
}
